# Environment variables for Agent Dojo
# Copy this file to .env and update with your actual values

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
DEBUG=true

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL Database Connection
# For Docker: postgresql+asyncpg://postgres:postgres@localhost:5433/agent_dojo
# For local PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/agent_dojo
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/agent_dojo

# PostgreSQL Configuration (used by docker-compose)
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5433

# =============================================================================
# Redis Configuration
# =============================================================================
# Redis Connection String
# For Docker: redis://localhost:6379/0
# For local Redis: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# =============================================================================
# API Server Configuration
# =============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=3000

# CORS Configuration (JSON array format)
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","tauri://localhost"]

# =============================================================================
# LLM Provider API Keys
# =============================================================================
# OpenAI API Key - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic API Key - Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Google AI API Key - Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key

# =============================================================================
# Observability - Langfuse Configuration
# =============================================================================
# Langfuse provides observability, tracing, and analytics for LLM applications
# Cloud: https://cloud.langfuse.com (ðŸ‡ªðŸ‡º EU) or https://us.cloud.langfuse.com (ðŸ‡ºðŸ‡¸ US)
# Self-hosted: http://localhost:3001

# Langfuse API Keys - Get from project settings
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key

# Langfuse Host URL
# For cloud: https://cloud.langfuse.com or https://us.cloud.langfuse.com
# For self-hosted: http://localhost:3001
LANGFUSE_HOST=https://cloud.langfuse.com

# Langfuse Docker Configuration (used by docker-compose)
LANGFUSE_PORT=3001
LANGFUSE_NEXTAUTH_SECRET=change-me-in-production-min-32-chars
LANGFUSE_SALT=change-me-in-production-min-32-chars
LANGFUSE_TELEMETRY=false
LANGFUSE_EXPERIMENTAL=true

# =============================================================================
# Integration Services
# =============================================================================
# Composio API Key - Get from: https://app.composio.dev/settings
COMPOSIO_API_KEY=your-composio-api-key

# =============================================================================
# Authentication & Security
# =============================================================================
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# =============================================================================
# File Storage Configuration
# =============================================================================
UPLOAD_MAX_SIZE=10485760  # 10 MB in bytes
ALLOWED_FILE_TYPES=[".txt",".pdf",".docx",".xlsx",".csv",".json",".yaml",".yml",".md"]

# =============================================================================
# Workflow Execution Limits
# =============================================================================
MAX_WORKFLOW_EXECUTION_TIME=300  # seconds
MAX_PARALLEL_AGENTS=5

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100